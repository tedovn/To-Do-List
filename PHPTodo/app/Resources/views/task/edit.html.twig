{% extends "base.html.twig" %}

{% block main %}
    <div id="create-wrapper">
        <section class="delete">
            <article>
                <form action="{{ path('edit', {'id': task.id}) }}" method="POST">
                    <div class="row">
                        <label for="task">Task:</label>
                        <input type="text" id="task" name="task[title]" value="{{ task.title }}">
                        {{ form_errors(form.title) }}
                    </div>
                    <div class="row">
                        <label for="comments">Comments:</label>
                        <textarea id="comments" name="task[comments]">{{ task.comments }}</textarea>
                        {{ form_errors(form.comments) }}
                    </div>

                    {{ form_row(form._token) }}

                    <button type="submit">Edit</button>
                    <a href="{{ path('index') }}">Cancel</a>
                </form>
            </article>
        </section>
    </div>
{% endblock %}
